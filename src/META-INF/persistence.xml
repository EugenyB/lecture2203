<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="ExampleDBPU">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>tables.Person</class>
        <class>tables.Car</class>
        <class>tables.Country</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="create" />
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/exampledb"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="eugeny"/>
            <property name="eclipselink.jdbc.password" value="123"/>
        </properties>
    </persistence-unit>
</persistence>
